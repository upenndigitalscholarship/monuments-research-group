<style>
    #map { height: 400px; }

</style>
 <div id="map"></div>

<script>
    let map = L.map('map').setView([39.951341960732286, -75.19363396859703], 16);
    
    L.tileLayer('https://{s}.tile.openstreetmap.fr/hot/{z}/{x}/{y}.png', {
	    maxZoom: 19,
    }).addTo(map);
    {% for monument in collections.monuments %}
    L.marker([{{ monument.data.lat }}, {{ monument.data.long }}]).addTo(map).bindPopup("{{ monument.data.title }}<br>{{ monument.data.description }}");
    {% endfor %}
</script>