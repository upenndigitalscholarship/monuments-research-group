<div id="map"></div>

<script>
    let map = L.map('map').setView([40.26029244302987, -90.23749139976277], 5);
    L.tileLayer('https://{s}.basemaps.cartocdn.com/dark_nolabels/{z}/{x}/{y}{r}.png', {
	attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors &copy; <a href="https://carto.com/attributions">CARTO</a>',
	subdomains: 'abcd',
	maxZoom: 20
    }).addTo(map);
    {% for essay in collections.essays %}
    {% if essay.data.lat and essay.data.long %}
    L.marker([{{ essay.data.lat }}, {{ essay.data.long }}]).addTo(map).bindPopup('<a href="/essay/{{ essay.fileSlug }}">{{ essay.data.title }}</a>');
    {% endif %}
    {% endfor %}
</script>